{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
    <h1 class="mt-4">{{ article.sequence.nom }} : {{ article.titre}}</h1>
    <h4 class="mt-3">Contenu du cour : </h4>
    <p class="mt-3">{{ article.contenu | raw }}</p>
    <p class="fst-italic">Date de création : {{ article.createdAt |date('d/m/Y') }}</p>
    <p class="fst-italic">Dernière modification :{% if article.modifiedAt is not null %} {{ article.modifiedAt |date('d/m/Y') }} {% else %} Jamais {% endif%} </p>


{% endblock %}