{% extends 'base.html.twig' %}

{% block title %}Cours {{niveaux.intitule}}{% endblock %}

{% block body %}
    <h2 class="mt-3">Tout les cours de {{niveaux.intitule}} ({{ nbcours }})</h2>
    <div class="container text-center">
        <div class="row row-cols-auto">
            {% for article in articles %}
                <div class="col">
                    <div class="card mt-4" style="width: 25rem; height: 20rem">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title">{{ article.titre }}</h5>
                            <p class="card-text">{{ article.contenu [:200] }}</p>
                            <div class="d-flex justify-content-end">
                                <a class="btn "
                                   href="{{ path("app_article_slug", {'slug': article.slug}) }}">Voir
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                         fill="currentColor"
                                         class="bi bi-eye-fill" viewBox="0 0 16 16">
                                        <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                                        <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="navigation d-flex justify-content-center mt-4">
        {{ knp_pagination_render(articles) }}
    </div>
{% endblock %}
